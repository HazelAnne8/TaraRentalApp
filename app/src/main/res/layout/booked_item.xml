<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:backgroundTint="@color/grayish_blue1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/ivbCarImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_profile"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/tvbBmy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brand Model year"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvbLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tvbPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tvbHost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hosted by"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tvbookDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book date"
                android:textSize="12dp"
                android:textColor="@color/black"/>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>